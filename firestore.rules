rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    function isAdmin() {
      return isSignedIn() && (
        getUserData().role == 'admin' || 
        request.auth.token.email in ['chirenjeevi7616@gmail.com'] // Super Admin Fallback
      );
    }
    function isOfficer() {
      return isSignedIn() && (getUserData().role == 'officer' || isAdmin());
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if isSignedIn(); // Anyone logged in can see user profiles (needed for dashboard)
      // Creation: User can create their own profile
      allow create: if isOwner(userId);
      // Update: User can update own profile, BUT ONLY Admins can change 'role'
      allow update: if isOwner(userId) && (
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role'])) || isAdmin()
      );
      // Admin Override: Admins can update anyone (to promote/demote)
      allow write: if isAdmin();
    }

    // --- Events Collection ---
    match /events/{eventId} {
      allow read: if true; // Public events
      allow write: if isAdmin(); // Only Admins manage events
    }

    // --- Registrations Collection ---
    match /registrations/{regId} {
      // Read: Owner can see own. Officers/Admins see all (for scanning).
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isOfficer());
      
      // Create: Users can register themselves
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Update: Officers can scan (mark attended). Admins can edit.
      allow update: if isOfficer();
      
      // Delete: Admins only (cleanup)
      allow delete: if isAdmin();
    }
  }
}
